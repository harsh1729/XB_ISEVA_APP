<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <!--<stroke android:width="1dip" android:color="@color/app_white" />-->
            <gradient android:angle="-90" android:startColor="@color/app_darkgreen" android:endColor="@color/app_darkgreen"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <!--<stroke android:width="1dip" android:color="@color/app_white" />-->
            <solid android:color="@color/app_darkgreen"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <!--<stroke android:width="1dip" android:color="@color/app_white" />-->
            <gradient android:angle="-90" android:startColor="@color/app_green" android:endColor="@color/app_green" />
        </shape>
    </item>
</selector>