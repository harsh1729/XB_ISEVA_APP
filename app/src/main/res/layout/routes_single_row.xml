<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/listview_background"

    android:orientation="vertical"
   android:paddingLeft="@dimen/padding_margin_10"
    android:paddingRight="@dimen/padding_margin_10"
    android:paddingTop="@dimen/padding_margin_15"
    android:paddingBottom="@dimen/padding_margin_15">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <com.iseva.app.source.customcomponent.TextViewBold
            android:id="@+id/company_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_mediam"
            android:paddingRight="@dimen/padding_margin_20"
            android:text="RKT Tours and Travels"
            android:textColor="@color/routes_screen_dark_text_color"
            android:textStyle="bold"
            android:layout_gravity="left"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.iseva.app.source.customcomponent.TextViewBold
                android:id="@+id/fare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_mediam"
                android:gravity="right"
                android:textColor="@color/routes_screen_light_text_color"
                android:textStyle="bold"
                android:text="@string/Rs"
                android:layout_gravity="right"/>
            <com.iseva.app.source.customcomponent.TextViewBold
                android:id="@+id/offer_fare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_mediam"
                android:gravity="right"
                android:textColor="@color/routes_screen_dark_text_color"
                android:textStyle="bold"
                android:text="@string/Rs"
                android:layout_gravity="right"/>
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp">
        <com.iseva.app.source.customcomponent.TextViewRegular
            android:id="@+id/bus_label"
            android:layout_width="0dp"
            android:layout_weight="85"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/routes_screen_light_text_color"
            android:text="2+2 AirBus Pushback A/C"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="15"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp">

        <com.iseva.app.source.customcomponent.TextViewRegular
            android:id="@+id/time_view"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/routes_screen_dark_text_color"
            android:text="10:45 PM - 5:45 AM"/>

        <com.iseva.app.source.customcomponent.TextViewRegular
            android:id="@+id/available_seat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/routes_screen_extra_light_text_color"
            android:textSize="@dimen/text_size_small"
            android:text="10 Seats"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        >

        <com.iseva.app.source.customcomponent.TextViewRegular
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/routes_screen_extra_light_text_color"
            android:text="07 Hrs00 Mins"/>

    </LinearLayout>

</LinearLayout>
