<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/RootView"
    android:orientation="vertical">

    <include layout="@layout/app_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9.0"
        android:orientation="vertical"
        android:paddingBottom="7dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingTop="5dp">

        <android.support.v7.widget.CardView
            android:id="@+id/custom_row_iservice_provider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="16sp"
                        android:typeface="serif"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtNameAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="15sp"
                        android:typeface="serif"
                        android:textColor="@android:color/black"
                        android:textStyle="normal" />


                </LinearLayout>

                <ImageView
                    android:id="@+id/imgDeatils"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginBottom="2dp"

                    android:src="@drawable/default_offer" />


            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/custom_row_iservice_providImages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Images"
                android:textColor="@color/default_circle_indicator_page_color"
                android:textSize="17sp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <LinearLayout
                    android:id="@+id/scrollLinearHorImageUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                </LinearLayout>
            </HorizontalScrollView>


        </android.support.v7.widget.CardView>

        <ScrollView
            android:id="@+id/scrollViewDetails"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8.2"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="@drawable/selector_row_item_listview"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/scrollLinearDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="7dp">

            <LinearLayout
                android:id="@+id/linearAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contact Details"
                    android:layout_marginLeft="8dp"
                    android:typeface="serif"
                    android:textColor="@android:color/black"
                    android:textSize="17sp"
                    />

                <TextView
                    android:id="@+id/txtContact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    android:layout_margin="8dp"
                     />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="6dp"
                    android:background="@color/colorPrimary"></LinearLayout>
            </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearEmails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/textVi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:layout_marginLeft="8dp"
                        android:typeface="serif"
                        android:textColor="@android:color/black"
                        android:textSize="17sp"
                        />

                    <TextView
                        android:id="@+id/txtEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:autoLink="email"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        android:layout_margin="8dp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:layout_marginBottom="6dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="6dp"
                        android:background="@color/colorPrimary"></LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearServices"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="iSeva"
                        android:typeface="serif"
                        android:layout_marginLeft="8dp"
                        android:textColor="@android:color/black"
                        android:textSize="17sp"

                        />

                    <TextView
                        android:id="@+id/txtServices"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:layout_margin="8dp"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:layout_marginBottom="6dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="6dp"
                        android:background="@color/colorPrimary"></LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                   >

                    <TextView
                        android:id="@+id/label_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Location"
                        android:typeface="serif"
                        android:layout_marginLeft="8dp"
                        android:textColor="@android:color/black"
                        android:textSize="17sp"

                        />

                    <ImageView
                        android:id="@+id/image_location_map"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/map_image"
                        android:layout_margin="8dp"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:layout_marginBottom="6dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="6dp"
                        android:background="@color/colorPrimary"></LinearLayout>
                </LinearLayout>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <Button
        android:id="@+id/callBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/app_dark"
        android:background="@drawable/selecter_details_call_btn"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:text="CALL" />
</LinearLayout>


