<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">
    <include layout="@layout/header"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/activity_signup_container_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/app_white"
            android:orientation="vertical">

           <!-- <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="vertical">

                &lt;!&ndash; <ImageView
                     android:id="@+id/img_logo"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:src="@drawable/logo" />&ndash;&gt;
            </LinearLayout>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <EditText
                    style="@style/et_login"
                    android:id="@+id/activity_register_et_username"
                    android:layout_marginLeft="@dimen/margin_20dp"
                    android:layout_marginRight="@dimen/margin_20dp"

                    android:background="@drawable/bg_et_box"
                    android:layout_marginTop="@dimen/margin_20dp"
                    android:drawableLeft="@drawable/icon_username"
                    android:hint="Full Name"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:textColor="@android:color/black" />


                <EditText
                    style="@style/et_login"
                    android:id="@+id/activity_register_et_email"
                    android:layout_marginLeft="@dimen/margin_20dp"
                    android:layout_marginRight="@dimen/margin_20dp"

                    android:background="@drawable/bg_et_box"
                    android:layout_marginTop="@dimen/margin_20dp"
                    android:drawableLeft="@drawable/icon_email"
                    android:hint="Email Address"
                    android:imeOptions="actionDone"
                    android:inputType="textEmailAddress"
                    android:textColor="@android:color/black" />

                <EditText
                    style="@style/et_login"
                    android:id="@+id/activity_register_et_phone"
                    android:layout_marginLeft="@dimen/margin_20dp"
                    android:layout_marginRight="@dimen/margin_20dp"

                    android:background="@drawable/bg_et_box"
                    android:layout_marginTop="@dimen/margin_20dp"
                    android:drawableLeft="@drawable/ic_call"
                    android:hint="Phone Number"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:textColor="@android:color/black" />

                    <EditText
                        style="@style/et_login"
                        android:id="@+id/activity_register_et_password"
                        android:background="@drawable/bg_et_box"
                        android:layout_marginTop="@dimen/margin_20dp"
                        android:drawableLeft="@drawable/icon_password"
                        android:hint="********"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:textColor="@android:color/black" />
                    <EditText
                        style="@style/et_login"
                        android:id="@+id/activity_register_et_password_confirm"
                        android:background="@drawable/bg_et_box"
                        android:layout_marginTop="@dimen/margin_20dp"
                        android:drawableLeft="@drawable/icon_password"
                        android:hint="********"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:textColor="@android:color/black" />


                    <Button
                        android:id="@+id/activity_register_bt_signup"
                        style="@style/btn_style_full_width"
                        android:onClick="register"
                        android:layout_marginTop="40dp"
                        android:text="Register" />


            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
