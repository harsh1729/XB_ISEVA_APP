<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity_Search_Resume">

    <include layout="@layout/app_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="9.5">

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="10dp">>

            <LinearLayout
                android:layout_width="match_parent"
                android:padding="5dp"
                android:layout_height="wrap_content" android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Choose Category:"/>

                <Spinner
                    android:id="@+id/spinCate"
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content"></Spinner>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Choose Location:"/>

                <Spinner
                    android:id="@+id/spinLocation"
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content"></Spinner>


                <Button
                    android:id="@+id/btnFindResume"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="Find Resume"
                    android:background="@drawable/selector_btn_app"
                    android:textColor="@drawable/selector_btn_text_app"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>



    </LinearLayout>

    <include layout="@layout/app_footer" />

</LinearLayout>
