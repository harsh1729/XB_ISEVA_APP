<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_white"
    android:orientation="vertical"

    tools:context=".Activity_Job_Employee_Home">

    <TextView
        android:id="@+id/txtDes"
        android:layout_below="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_margin="5dp"
        android:text="Register with us to upload your resume. Press login if you are already registered."
        android:typeface="serif"
        android:textSize="17sp"/>


    <LinearLayout
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:padding="10dp"
         android:layout_gravity="right"
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_alignParentRight="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:layout_gravity="center_vertical"
            android:typeface="serif"
            android:layout_marginRight="5dp"
            android:textColor="@android:color/black"/>
        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:src="@drawable/logout"/>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/linearProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:visibility="gone"
        android:layout_below="@+id/logout"
        android:orientation="horizontal">
        <!--<com.iseva.app.source.Custom_RoundedImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/default_offer"
            android:scaleType="centerCrop"
            android:id="@+id/view"
             />-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome Sushil"
            android:textStyle="bold"
            android:textSize="20sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:typeface="serif"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorPrimary"
            android:id="@+id/textView" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9.5"
        android:paddingBottom="5dp"
        android:background="@drawable/employeess">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"></LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/selector_btn_app"
        android:id="@+id/find"
        android:layout_margin="10dp"
        android:onClick="getJobs"
        android:textColor="@drawable/selector_btn_text_app"
        android:text="Find Jobs"/>


        <LinearLayout
            android:id="@+id/linear"
            android:layout_below="@+id/find"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:visibility="visible"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:onClick="login"
        android:layout_marginRight="10dp"
        android:background="@drawable/selector_btn_app"
        android:textColor="@drawable/selector_btn_text_app"
        android:text="Login"/>

    <Button
        android:id="@+id/btnpostResume"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_btn_app"
        android:textColor="@drawable/selector_btn_text_app"
        android:text="Register"
        android:gravity="center"
        android:drawablePadding="5dp"
        android:onClick="postResume"
        android:layout_weight="1"


         />

        </LinearLayout>

        </LinearLayout>
    </RelativeLayout>


    <include layout="@layout/app_footer"
       />

</LinearLayout>
