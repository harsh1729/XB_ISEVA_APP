<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/job"
    android:orientation="vertical"
    android:alpha="3.0"
    tools:context="com.iseva.app.source.Activity_Search_Jobs">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9.5"
        android:background="@drawable/job">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnLogin"
        android:background="@drawable/selector_btn_app"
        android:layout_margin="10dp"
        android:onClick="getJobs"
        android:textColor="@drawable/selector_btn_text_app"
        android:text="Find Jobs"/>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:drawableRight="@android:drawable/ic_lock_idle_lock"
        android:drawablePadding="5dp"
        android:background="@drawable/selector_btn_app"
        android:textColor="@drawable/selector_btn_text_app"
        android:text="Login"/>

    <Button
        android:id="@+id/btnpostResume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_btn_app"
        android:textColor="@drawable/selector_btn_text_app"
        android:text="Post Resume"
        android:onClick="postResume"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginRight="10dp"
        android:drawableRight="@android:drawable/ic_dialog_map"
        android:drawablePadding="5dp"
        android:layout_alignTop="@+id/btnLogin"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    </RelativeLayout>


    <include layout="@layout/app_footer"
       />

</LinearLayout>
