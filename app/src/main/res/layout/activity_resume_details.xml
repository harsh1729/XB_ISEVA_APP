<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.iseva.app.source.Activity_Resume_Details">

    <include layout="@layout/app_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9.0"
        android:orientation="vertical"
        android:paddingBottom="7dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingTop="5dp">

        <android.support.v7.widget.CardView
            android:id="@+id/custom_row_iservice_provider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="16sp"
                        android:typeface="serif"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtQualification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="15sp"
                        android:typeface="serif"
                        android:textColor="@android:color/black"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/txtemail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:autoLink="email"
                        android:linksClickable="true"
                        android:textSize="15sp"
                        android:typeface="serif"
                        android:textColor="@android:color/black"
                        android:textStyle="normal" />


                </LinearLayout>

                <ImageView
                    android:id="@+id/imgDeatils"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginBottom="2dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_offer" />


            </LinearLayout>
        </android.support.v7.widget.CardView>

        <ScrollView
            android:id="@+id/scrollViewDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="@drawable/selector_row_item_listview"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/scrollLinearDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="7dp">

                <LinearLayout
                    android:id="@+id/linearAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        android:layout_marginLeft="8dp"
                        android:typeface="serif"
                        android:textColor="@android:color/black"
                        android:textSize="17sp"
                        />

                    <TextView
                        android:id="@+id/txtContact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        android:layout_margin="8dp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:layout_marginBottom="6dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="6dp"
                        android:background="@color/colorPrimary"></LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/linearContactsNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/textV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Contact No."
                        android:layout_marginLeft="8dp"
                        android:typeface="serif"
                        android:textColor="@android:color/black"
                        android:textSize="17sp"
                        />

                    <TextView
                        android:id="@+id/txtnumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:autoLink="phone"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        android:layout_margin="8dp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:layout_marginBottom="6dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="6dp"
                        android:background="@color/colorPrimary"></LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearExperience"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Experience"
                        android:typeface="serif"
                        android:layout_marginLeft="8dp"
                        android:textColor="@android:color/black"
                        android:textSize="17sp"

                        />

                    <TextView
                        android:id="@+id/txtExperience"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:layout_margin="8dp"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:layout_marginBottom="6dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="6dp"
                        android:background="@color/colorPrimary"></LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearCurrentJob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Current Status"
                        android:typeface="serif"
                        android:layout_marginLeft="8dp"
                        android:textColor="@android:color/black"
                        android:textSize="17sp"

                        />

                    <TextView
                        android:id="@+id/txtCurrentStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:layout_margin="8dp"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:layout_marginBottom="6dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="6dp"
                        android:background="@color/colorPrimary"></LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearAge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Age &amp; Gender"
                        android:typeface="serif"
                        android:layout_marginLeft="8dp"
                        android:textColor="@android:color/black"
                        android:textSize="17sp"

                        />

                    <TextView
                        android:id="@+id/txtAge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:layout_margin="8dp"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:layout_marginBottom="6dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="6dp"
                        android:background="@color/colorPrimary"></LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/linearAchive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Achievement"
                        android:typeface="serif"
                        android:layout_marginLeft="8dp"
                        android:textColor="@android:color/black"
                        android:textSize="17sp"

                        />

                    <TextView
                        android:id="@+id/txtAchive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:layout_margin="8dp"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:layout_marginBottom="6dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="6dp"
                        android:background="@color/colorPrimary"></LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearOthers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Others"
                        android:typeface="serif"
                        android:layout_marginLeft="8dp"
                        android:textColor="@android:color/black"
                        android:textSize="17sp"

                        />

                    <TextView
                        android:id="@+id/txtOthers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:layout_margin="8dp"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:layout_marginBottom="6dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="6dp"
                        android:background="@color/colorPrimary"></LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearResume"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Resume"
                        android:typeface="serif"
                        android:layout_marginLeft="8dp"
                        android:textColor="@android:color/black"
                        android:textSize="17sp"

                        />

                    <TextView
                        android:id="@+id/txtResume"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Download"
                        android:linksClickable="true"
                        android:autoLink="none"
                        android:textColor="@android:color/black"
                        android:layout_margin="8dp"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:layout_marginBottom="6dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="6dp"
                        android:background="@color/colorPrimary"></LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        </LinearLayout>

    <Button
        android:id="@+id/callBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selecter_details_call_btn"
        android:paddingBottom="3dp"
        android:textColor="@color/app_dark"
        android:paddingTop="3dp"
        android:text="CALL" />

</LinearLayout>
