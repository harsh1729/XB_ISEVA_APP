<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/footer"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:padding="1dp"
    android:background="?attr/colorPrimary"
    android:orientation="vertical" >

<!--
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="@color/app_gray" >
    </LinearLayout>
-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9.5"
        android:paddingBottom="4dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="4dp" >

        <ImageButton
            android:id="@+id/imgBtnFooterFind"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="Find Resume"
            android:scaleType="fitCenter"
            android:onClick="footerBtnClick"
            android:src="@drawable/footer_selecter_search" />

        <ImageButton
            android:id="@+id/imgBtnFooterPostResume"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="Post Resume"
            android:scaleType="fitCenter"
            android:onClick="footerBtnClick"
            android:src="@drawable/footer_selecter_post_resume" />

        <ImageButton
            android:id="@+id/imgBtnFooterPostJob"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="Post Job"
            android:scaleType="fitCenter"
            android:onClick="footerBtnClick"
            android:src="@drawable/footer_selecter_post_job" />


</LinearLayout>
</LinearLayout>