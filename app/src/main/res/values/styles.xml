<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/background_material_light</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>

    <style name="et_login">
        <item name="android:background">@drawable/bg_et_box</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/padding_margin_10</item>
        <item name="android:textColorHint">@color/txt_editbox</item>
        <item name="android:textColor">@color/text_name</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:layout_marginLeft">@dimen/padding_margin_20</item>
        <item name="android:layout_marginRight">@dimen/padding_margin_20</item>
        <item name="android:drawablePadding">@dimen/padding_margin_10</item>



        <!--<item name="font_name">@string/font_name_opensans_regular</item>-->

    </style>

    <style name="et_default">
        <item name="android:background">@drawable/bg_et_box</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/padding_margin_10</item>
        <item name="android:textColorHint">@color/txt_editbox</item>
        <item name="android:textColor">@color/text_name</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/text_size_large</item>

        <item name="android:drawablePadding">@dimen/padding_margin_10</item>
    </style>

    <style name="btn_style_full_width">
        <item name="android:background">@drawable/btn_background</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/padding_margin_10</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:layout_marginLeft">@dimen/padding_margin_20</item>
        <item name="android:layout_marginRight">@dimen/padding_margin_20</item>


    </style>


    <style name="custom_appcompact" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/app_theme_color</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- Customize your theme here. -->


    </style>


</resources>
